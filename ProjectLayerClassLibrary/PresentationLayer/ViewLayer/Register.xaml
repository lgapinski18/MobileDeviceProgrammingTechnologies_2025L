<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:vm="clr-namespace:ProjectLayerClassLibrary.PresentationLayer.ViewModelLayer"
        Title="Login" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Left" Width="210" Margin="2.5">
            <Label Content="Login"/>
            <TextBox  HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2" Padding="5"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Width="210" Margin="2.5">
            <Label Content="Password"/>
            <PasswordBox HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2" Padding="5"/>
        </StackPanel>
        <StackPanel Width="210" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2.5">
            <Button Content="Login" HorizontalAlignment="Right" Style="{DynamicResource PrimaryButton}"/>
            <Button Content="Register" HorizontalAlignment="Right" Style="{DynamicResource SecondaryButton}"/>
        </StackPanel>
    </StackPanel>
</Window>
