<UserControl x:Class="ProjectLayerClassLibrary.PresentationLayer.ViewLayer.CreateTransfer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLayerClassLibrary.PresentationLayer.ViewLayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Source: " />
            <TextBlock Text="{Binding SourceAccountNumber}" VerticalAlignment="Center" FontWeight="Bold" Margin="2.5, 0, 0, 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Destination: " />
            <TextBox Text="{Binding DestinationAccountNumber}" VerticalAlignment="Center" FontWeight="Bold" Margin="2.5, 0, 0, 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Recipient: " />
            <TextBox Text="{Binding TransferRecipient}" VerticalAlignment="Center" FontWeight="Bold" Margin="2.5, 0, 0, 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Title: " />
            <TextBox Text="{Binding TransferTitle}" VerticalAlignment="Center" FontWeight="Bold" Margin="2.5, 0, 0, 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Amount: " />
            <TextBox Text="{Binding TransferAmount}" VerticalAlignment="Center" FontWeight="Bold" Margin="2.5, 0, 0, 0"/>
        </StackPanel>
        <Button Content="Make Transfer" Command="{Binding MakeTransferCommand}"/>
    </StackPanel>
</UserControl>
